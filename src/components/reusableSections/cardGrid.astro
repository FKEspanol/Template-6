---
import { Icon } from "astro-icon";
import { Card } from "../../dataContents/interfaces";
const { cardIcon, cardTitle, cardContent } = Astro.props as Card;
---

<div class="p-10 bg-white min-h-full">
   <div class="mb-7">
      <Icon name={cardIcon} width="50px" class="text-primary" />
   </div>
   <h3
      class="text-2xl mb-5 heading-dark w-fit font-bold after:block after:mt-2 after:w-full after:h-1 after:bg-gray-200"
   >
      {cardTitle}
   </h3>
   <p class="text-base">{cardContent}</p>
</div>
