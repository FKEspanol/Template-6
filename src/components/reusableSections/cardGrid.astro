---
import { Icon } from "astro-icon";
import servicesData from "../../dataContents/services";
---

<div
    class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5 md:gap-6 md:px-3"
>
    {
        servicesData.map(({ cardIcon, cardTitle, cardContent }) => {
            return (
                <div class="p-10 bg-white min-h-full">
                    <div class="mb-7">
                        <Icon
                            name={cardIcon}
                            width="50px"
                            class="text-primary"
                        />
                    </div>
                    <h3 class="text-2xl mb-5 heading-dark w-fit font-bold after:block after:mt-2 after:w-full after:h-1 after:bg-gray-200">
                        {cardTitle}
                    </h3>
                    <p class="text-base text-gray-500">{cardContent}</p>
                </div>
            );
        })
    }
</div>
