---
import Section from "./section.astro";

export interface Props {
    title: string;
    author: string;
    date: string;
    image: string;
    Content: any;
}

const { title, author, date, image, Content } = Astro.props as Props;
---

<Section>
    <div class="p-6 rounded-md bg-white">
        <h2 class="text-4xl font-bold mb-5">{title}</h2>
        <p class="mb-5">Written by <strong>{author}</strong> on {date}</p>
        <Content />
    </div>
</Section>
