---
import Section from "../../section.astro";
import SubSectionHeading from "../../subSectionHeading.astro";
import { Icon } from "astro-icon";

interface SectionItems {
   icon: string;
   heading: string;
   content: string;
}

const contents = {
   sectionHeading: "Enim quis est voluptatibus aliquid consequatur fugiat",
   subHeading:
      "Esse voluptas cumque vel exercitationem. Reiciendis est hic accusamus. Non ipsam et sed minima temporibus laudantium. Soluta voluptate sed facere corporis dolores excepturi",

   sectionItems: [
      {
         icon: "bi:easel",
         heading: "Lorem Ipsum",
         content:
            "Voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati cupiditate non provident",
      },
      {
         icon: "bi:patch-check",
         heading: "Nemo Enim",
         content:
            "At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque",
      },
      {
         icon: "uil:brightness",
         heading: "Dine Pad",
         content:
            "Explicabo est voluptatum asperiores consequatur magnam. Et veritatis odit. Sunt aut deserunt minus aut eligendi omnis",
      },
      {
         icon: "uil:brightness",
         heading: "Tride clov",
         content:
            "Est voluptatem labore deleniti quis a delectus et. Saepe dolorem libero sit non aspernatur odit amet. Et eligendi",
      },
   ] as SectionItems[],
};
---

<Section bgColorClassName="bg-white">
   <div class="lg:flex lg:justify-around lg:gap-y-3">
      <div
         class="min-h-[400px] mb-8 lg:w-6/12 sm:px-3 bg-[url('/assets/images/alt-services.jpg')] bg-cover bg-center bg-no-repeat"
      >
      </div>
      <div class="lg:w-5/12 sm:px-3 flex flex-col justify-center">
         <SubSectionHeading
            content="Enim quis est voluptatibus aliquid consequatur fugiat"
         />
         <p class="text-base mb-14">
            Esse voluptas cumque vel exercitationem. Reiciendis est hic
            accusamus. Non ipsam et sed minima temporibus laudantium. Soluta
            voluptate sed facere corporis dolores excepturi
         </p>
         <ul>
            {
               contents.sectionItems.map(({ icon, heading, content }) => {
                  return (
                     <div class="flex mb-12">
                        <Icon
                           name={icon}
                           width="80px"
                           height="80px"
                           class="flex items-center justify-center text-primary mr-3 sm:mr-6 h-fit mb-auto p-2.5 bg-gray-100"
                        />
                        <div>
                           <h3 class="text-lg font-bold mb-1">{heading}</h3>
                           <p class="text-base text-gray-500">{content}</p>
                        </div>
                     </div>
                  );
               })
            }
         </ul>
      </div>
   </div>
</Section>
